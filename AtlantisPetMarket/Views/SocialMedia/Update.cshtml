@model SocialMedia
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4>Hesap Güncelleme</h4>
            <br />
            <form class="forms-sample" asp-action="Update" method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>URL</label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>İkon</label>
                    <select typeof="text" asp-for="Icon" class="form-control" name="Icon">
                        <option value="mdi mdi-twitter">Twitter</option>
                        <option value="mdi mid-youtube">Youtube</option>
                        <option value="mdi mdi-facebook">Facebook</option>
                        <option value="mdi mdi-instagram">Instagram</option>
                        <option value="mdi mdi-whatsapp">WhatsApp</option>
                        <option value="mdi mdi-snapchat">Snapchat</option>
                        <option value="mdi mdi-telegram">Telegram</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

