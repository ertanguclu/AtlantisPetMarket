<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4>Yeni Mesaj Gönderme Paneli</h4>
            <br />
            <form asp-action="AdminMessageSend" method="post" class="forms-sample">
                <div class="form-group">
                    <label class="form-label">Konu</label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Alıcı</label>
                    <input asp-for="Receiver" class="form-control" />
                    <span asp-validation-for="Receiver" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Mesaj</label>
                    <textarea asp-for="MessageContent" class="form-control" rows="8" cols="3"></textarea>
                    <span asp-validation-for="MessageContent" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                <a asp-action="ReceiverMessageList" class="btn btn-dark">İptal</a>
            </form>
        </div>
    </div>
</div>

