@model IEnumerable<EntityLayer.Models.Concrete.CartItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sepetim</title>
    <link rel="stylesheet" href="~/css/styles.css"> <!-- Stil dosyanızı ekleyin -->
</head>
<body>
    <div class="container">
        <h1>Sepetiniz</h1>
        @if (Model != null && Model.Any())
        {
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Miktar</th>
                        <th>Fiyat</th>
                        <th>Toplam</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Product.Price.ToString("C")</td>
                            <td>@(item.Quantity * item.Product.Price).ToString("C")</td>
                            <td>
                                <form asp-action="RemoveFromCart" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="remove-btn">Kaldır</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="cart-summary">
                <p><strong>Toplam Tutar:</strong> @Model.Sum(i => i.Quantity * i.Product.Price).ToString("C")</p>
                <form asp-action="Checkout" method="post">
                    <button type="submit" class="checkout-btn">Ödeme Yap</button>
                </form>
            </div>
        }
        else
        {
            <p>Sepetinizde ürün bulunmuyor.</p>
        }
    </div>
    <script src="~/js/scripts.js"></script> <!-- JavaScript dosyanızı ekleyin -->
</body>
</html>