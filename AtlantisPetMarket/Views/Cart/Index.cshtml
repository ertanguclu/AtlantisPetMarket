@using AtlantisPetMarket.Models.CartViewModel
@model CartVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sepetim</title>
</head>
<body>
    <div class="container">
        <h1>Sepetiniz</h1>
        
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Miktar</th>
                        <th>Fiyat</th>
                        <th>Toplam</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.Product.ProductName</td> <!-- Ürün Adı -->
                            <td>@item.Quantity</td> <!-- Miktar -->
                            <td>@item.Product.Price.ToString("C")</td> <!-- Fiyat -->
                            <td>@(item.Quantity * item.Product.Price).ToString("C")</td> <!-- Toplam Fiyat -->
                            <td>
                                <form asp-action="RemoveFromCart" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="remove-btn">Kaldır</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="cart-summary">
                <p><strong>Toplam Tutar:</strong> @Model.CartItems.Sum(i => i.Quantity * i.Product.Price).ToString("C")</p>
                <form asp-action="Checkout" method="post">
                    <button type="submit" class="checkout-btn">Ödeme Yap</button>
                </form>
            </div>
      
    </div>
</body>
</html>
