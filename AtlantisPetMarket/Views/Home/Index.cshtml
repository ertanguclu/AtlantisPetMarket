<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Fonksiyon: Ürünleri yükler
        function loadProducts(filter) {
            $.ajax({
                url: '/PetFoodies/LoadFoods',
                type: 'GET',
                data: { category: filter },
                success: function (data) {
                    $('#foodsContainer').html(data);
                },
                error: function (xhr, status, error) {
                    console.error('Ajax request failed:', status, error);
                }
            });
        }

        // Butonlara tıklama olayları
        $('#showAll').click(function () {
            loadProducts('all');
        });

        $('#showCats').click(function () {
            loadProducts('Kedi Maması');
        });

        $('#showDogs').click(function () {
            loadProducts('Köpek Maması');
        });
        $('#showBirds').click(function () {
            loadProducts('Kuş Yemi');
        });
        $('#showFishs').click(function () {
            loadProducts('Balık Yemi');
        });
        $('#showRodents').click(function () {
            loadProducts('Kemirgen Yemi');
        });

        // Sayfa yüklendiğinde tüm ürünleri göster
        loadProducts('all');
    });
</script>
